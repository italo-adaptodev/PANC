<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Restaurante.Restaurante_DetalharRestauranteDONOActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infosMeuRest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewMeuRest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nomeRestauranteMeuRest"
            android:autoSizeTextType="uniform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurante do Tio Zé"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/localizacaoRestaurante"
            app:layout_constraintEnd_toStartOf="@+id/editarRestaurante"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/editarRestaurante"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:layout_marginEnd="4dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/ic_menu_preferences" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/localizacaoRestaurante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:autoSizeTextType="uniform"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="5dp"
            android:text="LOCALIZAÇÃO"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/numContatoRestaurante"
            app:layout_constraintEnd_toStartOf="@+id/editarRestaurante"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/nomeRestauranteMeuRest"
            app:layout_constraintTop_toBottomOf="@+id/nomeRestauranteMeuRest"
            app:layout_constraintVertical_bias="1.0" />

        <com.google.android.material.textview.MaterialTextView
            android:autoSizeTextType="uniform"
            android:drawableStart="@drawable/ic_contact"
            android:drawablePadding="5dp"
            android:id="@+id/numContatoRestaurante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="NUMERO"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editarRestaurante"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/nomeRestauranteMeuRest"
            app:layout_constraintTop_toBottomOf="@+id/localizacaoRestaurante" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBarMeuRest"
        android:layout_width="72dp"
        android:layout_height="61dp"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintBottom_toBottomOf="@+id/coordinatorLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/infosMeuRest" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/emptyRecyclerViewTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum item encontrado"
        android:textColor="#000000"
        android:textSize="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewMeuRest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewMeuRest"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewMeuRest">

    </com.google.android.material.textview.MaterialTextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMeuRest"
        android:layout_width="387dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/coordinatorLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infosMeuRest"
        tools:listitem="@layout/cardview_prato_restaurante">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="@color/colorPrimary"
            app:fabAlignmentMode="center"
            >
        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addPratoMeuRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            app:layout_anchor="@id/bottom_app_bar"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerViewMeuRest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="1.0"
            app:maxImageSize="50dp"
            app:srcCompat="@drawable/ic_add_button"
            app:tint="@null" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>