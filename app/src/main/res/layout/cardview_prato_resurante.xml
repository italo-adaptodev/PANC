<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="7dp"
    android:id="@+id/cardviewVitrineProduto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/vitrineProdutoLinearLayoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageButton
                android:id="@+id/vitrineProdutoDelete"
                android:layout_width="35dp"
                android:layout_height="26dp"
                android:layout_gravity="end"
                android:background="@null"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_delete" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/vitrineProdutoLinearLayoutCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D8EEEAEA"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/vitrineProdutoImagem"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pancdefault" />

            <TextView
                android:id="@+id/restaurantePratoNome"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:text="Nome do produto"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/restaurantePratoPreco"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:text="PreÃ§o"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>